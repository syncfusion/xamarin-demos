<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  <LinearLayout android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:background="@drawable/ImageEditorProfileGradientBackground"
     android:id="@+id/ProfileLinearLayout">

    <TextView android:id="@+id/txtView"
          android:text="Profile"
          android:textColor="#195866"
          android:textSize="15dp"
           android:paddingLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>

    <ImageView
         android:id="@+id/profileImageView"
         android:layout_width="match_parent"
          android:layout_marginTop="11dp"
         android:layout_height="150dp"
         android:src="@drawable/ProfileEditor" />

    <Button  android:background="@drawable/ImageEditorProfileEditButtonBackground"
             android:id="@+id/profileEditButton"
             android:text="Edit Image"
            android:textSize="14dp"
             android:paddingLeft="10dip"
             android:paddingRight="10dip"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="43dp"
             android:layout_width="wrap_content"
             android:layout_gravity="center"
         android:layout_height="32dip"/>

  </LinearLayout>
  
    <ListView
      android:id="@+id/ProfileEditorListView"
      android:layout_width="match_parent"
        android:scrollbars="none"
        android:divider="@null"
      android:dividerHeight="0dp"
      android:layout_height="wrap_content" />
  
</LinearLayout>
