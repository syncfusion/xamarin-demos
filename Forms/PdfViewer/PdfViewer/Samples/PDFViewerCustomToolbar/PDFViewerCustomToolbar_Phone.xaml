            <Grid x:Name="moreOptionsToolbar"  BackgroundColor="#E9E9E9" Padding="5" Grid.Row="1" IsVisible="{Binding IsMoreOptionsToolBarVisible}" WidthRequest="150" HeightRequest="100" HorizontalOptions="End"  VerticalOptions="Start">
