<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateAssemblyVersionAttribute>false</GenerateAssemblyVersionAttribute>
     <Configurations>Debug;Release;Release-xml</Configurations>
	 <RootNamespace>SampleBrowser.SfSparkline</RootNamespace>
     <AssemblyName>SampleBrowser.SfSparkline</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <EmbeddedResource Include="SamplesList\SamplesList.xml">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="SampleBrowser.Core" Version="21.2.3" />
    <PackageReference Include="Syncfusion.Xamarin.Core" Version="21.2.3" />
    <PackageReference Include="Syncfusion.Xamarin.DataSource" Version="21.2.3" />
    <PackageReference Include="Syncfusion.Xamarin.GridCommon" Version="21.2.3" />
    <PackageReference Include="Syncfusion.Xamarin.SfListView" Version="21.2.3" />
    <PackageReference Include="Syncfusion.Xamarin.SfSparkline" Version="21.2.3" />
    <PackageReference Include="Xamarin.Forms" Version="5.0.0.2012" />
  </ItemGroup>

  <ItemGroup>
    <Compile Condition=" '$(EnableDefaultCompileItems)' == 'true' " Update="App.xaml.cs">
      <DependentUpon>*.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

</Project>